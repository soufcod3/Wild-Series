{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Commentaires</h2>
    {% if comments is not empty %}
    <ul>
    {% for comment in comments %}
    <li>{{ comment.author.email }}: "{{ comment.comment }}" (note : {{ comment.rate }})</li>
    {% endfor %}
    </ul>
    {% else %}
    Il n'y a pas de commentaires pour le moment. 
    {% endif %}
    
    {% if app.user %}
    <h2>Ajouter un commentaire</h2><br>
    {{ include('comment/_form.html.twig') }}   
    {% endif %}

    <a href="{{ path('episode_index') }}">back to list</a>

    <a href="{{ path('episode_edit', {slug: episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
