{% extends "base.html.twig" %}

{% block body %}
    <h1>Toutes les séries : </h1>
    {% for program in programs %}
    <div class="card" style="width: 25rem;">
        <img class="card-img-top" src="{{ program.poster }}" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">{{ loop.index }}. {{ program.title }}</h5>
          <h6 class="card-title">{{ program.category.name }}</h6>
          <p class="card-text">{{ program.synopsis }}</p>
          <a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-primary">Voir la fiche</a>
        </div>
    </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock body %}